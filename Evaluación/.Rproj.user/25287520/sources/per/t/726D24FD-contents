sies <- readRDS("data/sies10_2.rds")

table(sies$Metodologia, sies$Indicadores)



sies <- sies %>%
  filter(Indicadores!=6.3  & Indicadores!=6.4  & Indicadores!=6.5 & Indicadores!=6.6 & Indicadores!=6.300  & Indicadores!=6.400  & Indicadores!=6.500 & Indicadores!=6.600   & Indicadores!=6.7 & Indicadores!=6.700)

sies$Indicadores <- as.character(sies$Indicadores)

#labelleo tabla sies
sies$Indicadores <- labelled(sies$Indicadores,
                             labels = c('Porcentaje de ocupados que trabajan más de 45 horas semanales'                                                           = '6.100',
